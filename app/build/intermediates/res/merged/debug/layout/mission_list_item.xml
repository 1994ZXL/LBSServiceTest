<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mission_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mission_list_item_checkbox"
        android:layout_gravity="left"
        android:enabled="false"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:checked="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mission_list_item_id"
        android:layout_toRightOf="@+id/mission_list_item_checkbox"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:text="Mission_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mission_list_item_content"
        android:layout_below="@+id/mission_list_item_id"
        android:layout_marginLeft="30dp"
        android:text="Mission_content"/>

</RelativeLayout>
